<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        x:Class="PrimSCADA.NewWindow"
        Width="1024" Height="800" MinHeight="200" MinWidth="200"
        Title="PrimSCADA" ShowInTaskbar="False" SystemDecorations="BorderOnly" Initialized="NewWindowOnInitialized" CanResize="True" Opened="NewWindowOnOpened" PointerMoved="NewWindowOnPointerMoved">
    <Grid RowDefinitions="30, *">
        <Rectangle Name="Header" Fill="Blue" PointerPressed="HeaderOnPointerPressed" PointerReleased="HeaderOnPointerReleased" PointerMoved="HeaderOnPointerMoved" PointerLeave="HeaderOnPointerLeave"></Rectangle>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="BExit" Background="Red" Click="BExitOnClick">X</Button>
        </StackPanel>
        <Rectangle Name="RectangleBound" Grid.Row="1" StrokeThickness="2" Stroke="Black" PointerMoved="RectangleBoundOnPointerMoved" PointerLeave="RectangleBoundOnPointerLeave" PointerPressed="RectangleBoundOnPointerPressed" PointerReleased="RectangleBoundOnPointerReleased"></Rectangle>
    </Grid>
</Window>
        