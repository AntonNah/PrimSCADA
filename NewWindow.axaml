<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        x:Class="PrimSCADA.NewWindow"
        Width="1024" Height="800"
        Title="PrimSCADA" ShowInTaskbar="False" SystemDecorations="BorderOnly" Initialized="NewWindow_OnInitialized" CanResize="True" Opened="TopLevel_OnOpened" PointerMoved="NewWindow_OnPointerMoved" PointerLeave="NewWindow_OnPointerLeave">
    <Grid RowDefinitions="30, *">
        <Rectangle Fill="Blue" PointerPressed="InputElement_OnPointerPressed" PointerReleased="InputElement_OnPointerReleased" PointerMoved="InputElement_OnPointerMoved" PointerLeave="InputElement_OnPointerLeave"></Rectangle>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Background="Red" Click="Button_OnClick">X</Button>
            <Label Name="Test"></Label>
        </StackPanel>
        <Rectangle Name="RectangleBound" Grid.Row="1" StrokeThickness="2" Stroke="Black" PointerMoved="RectangleBound_OnPointerMoved" PointerLeave="RectangleBound_OnPointerLeave" PointerPressed="RectangleBound_OnPointerPressed" PointerReleased="RectangleBound_OnPointerReleased"></Rectangle>
    </Grid>
</Window>
        